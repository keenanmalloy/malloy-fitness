{
  "extends": [
    "plugin:prettier/recommended" // Always last
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "import/no-anonymous-default-export": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 120,
        "semi": false,
        "trailingComma": "es5",
        "tabWidth": 2,
        "useTabs": false
      }
    ]
  }
}
