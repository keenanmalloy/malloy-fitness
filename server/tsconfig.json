{
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "types": ["jest"],
    "lib": ["dom", "es2020"],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*",
        "src/middlewares/*",
        "src/controllers/*",
        "src/config/*",
        "src/utils/*"
      ]
    },
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": false,
    "inlineSourceMap": true
  }
}
