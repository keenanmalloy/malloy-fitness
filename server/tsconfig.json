{
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "types": ["jest"],
    "lib": ["dom", "ESNext"],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": false,
    "inlineSourceMap": true
  }
}
